{
    "compilerOptions": {
      // project options
      "lib": [
        "ESNext",
        "dom"
      ],

      "types":["node"],
      "jsx":"react-jsx",
      "module": "esnext",
      "resolveJsonModule": true,

      "outDir": "lib",
      "removeComments": true,
      "target": "ES6",

      // Module resolution
      "baseUrl": "./",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "paths": {},

      // Source Map
      "sourceMap": true,
      "sourceRoot": "/",

      // Strict Checks
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "noImplicitAny": true,
      "strictNullChecks": true,

      // Linter Checks
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["./**/*.tsx"],
    "exclude": [
      "node_modules/**/*"
    ]
  }